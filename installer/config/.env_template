# TT-Live-AI-TTS 环境变量配置模板
# 复制此文件为 .env 并根据需要修改配置

# ===========================================
# 服务配置
# ===========================================
TTS_HOST=127.0.0.1
TTS_PORT=5001
WEB_PORT=8000

# ===========================================
# 语音合成配置
# ===========================================
DEFAULT_VOICE=Lior
MAX_CONCURRENT=5
AUDIO_FORMAT=mp3
AUDIO_QUALITY=high

# ===========================================
# 文件路径配置
# ===========================================
INPUT_DIR=input
OUTPUT_DIR=outputs
LOG_DIR=logs
TEMPLATE_DIR=templates
STATIC_DIR=static

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===========================================
# ngrok 公网映射配置（可选）
# ===========================================
NGROK_TOKEN=your_ngrok_token_here
NGROK_REGION=us
NGROK_SUBDOMAIN=

# ===========================================
# 高级配置
# ===========================================
DEBUG=False
FLASK_ENV=production
SECRET_KEY=your_secret_key_here

# ===========================================
# 性能配置
# ===========================================
WORKER_THREADS=4
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=16MB

# ===========================================
# 安全配置
# ===========================================
CORS_ORIGINS=*
ALLOWED_HOSTS=127.0.0.1,localhost
API_RATE_LIMIT=100/hour
